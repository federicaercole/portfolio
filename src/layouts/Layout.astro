---
export interface Props {
	title: string;
}

const { title } = Astro.props;
import "../assets/style.scss";
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";
---

<!DOCTYPE html>
<html lang="it">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />

		<link
			rel="apple-touch-icon"
			sizes="180x180"
			href="../src/assets/favicon/apple-touch-icon.png"
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="32x32"
			href="../src/assets/favicon/favicon-32x32.png"
		/>
		<link
			rel="icon"
			type="image/png"
			sizes="16x16"
			href="../src/assets/favicon/favicon-16x16.png"
		/>
		<link rel="manifest" href="../src/assets/favicon/site.webmanifest" />
		<link
			rel="mask-icon"
			href="../src/assets/favicon/safari-pinned-tab.svg"
			color="#041349"
		/>
		<meta name="msapplication-TileColor" content="#041349" />
		<meta name="theme-color" content="#ffffff" />

		<title>{title}</title>
	</head>
	<body>
		<Nav />
		<slot />
		<Footer />
	</body>
</html>
