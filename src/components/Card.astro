---
export interface Props {
	title: string;
	subtitle: string;
	desc: string;
	slug: string;
	alt: string;
}

const { title, subtitle, desc, slug, alt } = Astro.props;
import { Icon } from "astro-icon";
---

<div class="work">
	<div class="work-desc">
		<h3>
			<a href=`/${slug}`>
				{title}
				<Icon name="jam:arrow-right" aria-hidden="true" />
			</a>
		</h3>
		<h4>{subtitle}</h4>
		<p>{desc}</p>
	</div>
	<div class="container">
		<a href=`/${slug}` tabindex="-1">
			<img
				alt={alt}
				src=`../src/assets/images/${slug}-cover.png`
				srcset=`../src/assets/images/${slug}-cover.png 1x,
			../src/assets/images/${slug}-cover-big.png 2x`
			/>
		</a>
	</div>
</div>
